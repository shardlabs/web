---
interface PricingFeature {
    text: string;
}

interface PricingPlan {
    name: string;
    price: number | string;
    period?: string;
    billingNote?: string;
    tagline: string;
    features: PricingFeature[];
    cta: string;
}

const plans: PricingPlan[] = [
    {
        name: 'Free',
        price: 0,
        period: 'Forever',
        tagline: '',
        cta: 'Start Free',
        features: [
            { text: '1 Shard' },
            { text: '10 Forms' },
            { text: '1,000 Automations' },
            { text: '100K Reads per Shard' },
            { text: '10K Writes per Shard' },
            { text: '100MB Storage per Shard' },
            { text: 'Community Support' },
        ],
    },
    {
        name: 'Personal',
        price: 20,
        period: 'per Month',
        tagline: '',
        cta: 'Get Started',
        features: [
            { text: '10 Shards' },
            { text: 'Unlimited Automations' },
            { text: 'Unlimited Forms' },
            { text: '1M Reads per Shard' },
            { text: '100K Writes per Shard' },
            { text: '1GB Storage per Shard' },
            { text: 'Community Support' },
        ],
    },
    {
        name: 'Pro',
        price: 100,
        period: 'per Month',
        tagline: '',
        cta: 'Get Started',
        features: [
            { text: '100 Shards' },
            { text: 'Unlimited Automations' },
            { text: 'Unlimited Forms' },
            { text: '10M Reads per Shard' },
            { text: '1M Writes per Shard' },
            { text: '10GB Storage per Shard' },
            { text: 'Priority Support' },
        ],
    },
];
---

<div class="pricing-wrapper">
    <div class="early-access-overlay">
        <div class="overlay-content">
            <span class="corner-bottom-left"></span>
            <span class="corner-bottom-right"></span>
            <h3 class="overlay-title">Free During Early Access</h3>
            <p class="overlay-message">
                Get started now at no cost. We'll notify you well before any
                pricing changes take effect.
            </p>
            <a
                href="https://app.shard.sh"
                target="_blank"
                rel="noopener noreferrer"
            >
                <button class="overlay-cta-button">
                    <svg
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M5 12h14"></path>
                        <path d="m12 5 7 7-7 7"></path>
                    </svg>
                    Get Started
                </button>
            </a>
        </div>
    </div>
    <div class="pricing-container">
        {
            plans.map((plan) => (
                <div class="pricing-card">
                    <div class="card-header">
                        <h3 class="plan-name">{plan.name}</h3>
                        <div class="price-container">
                            <span class="currency">$</span>
                            <span class="price">{plan.price}</span>
                        </div>
                        {plan.period && <div class="period">{plan.period}</div>}
                        {plan.billingNote && (
                            <div class="billing-note">{plan.billingNote}</div>
                        )}
                        {plan.tagline && (
                            <div class="tagline">{plan.tagline}</div>
                        )}
                    </div>
                    <div class="card-body">
                        <ul class="feature-list">
                            {plan.features.map((feature, index) => (
                                <li class="feature">{feature.text}</li>
                            ))}
                        </ul>
                        <a
                            href="https://app.shard.sh"
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <button
                                class="cta-button"
                                data-fast-goal="pricing_plan_clicked"
                                data-fast-goal-price={plan.price}
                                data-fast-goal-plan-type={plan.name}
                            >
                                {plan.cta}
                            </button>
                        </a>
                    </div>
                </div>
            ))
        }
    </div>
</div>

<style>
    .pricing-wrapper {
        position: relative;
        max-width: 1200px;
        margin: 0 auto;
    }

    .early-access-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.75);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        z-index: 10;
        border-radius: 16px;
        padding: 20px;
    }

    .overlay-content {
        text-align: center;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 0;
        padding: 40px 48px;
        max-width: 600px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
        position: relative;

        @media (max-width: 768px) {
            background: rgba(0, 0, 0, 0.5);
        }
    }

    /* Corner accents */
    .overlay-content::before,
    .overlay-content::after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255, 255, 255, 0.6);
    }

    /* Top-left corner */
    .overlay-content::before {
        top: 0;
        left: 0;
        border-right: none;
        border-bottom: none;
    }

    /* Top-right corner */
    .overlay-content::after {
        top: 0;
        right: 0;
        border-left: none;
        border-bottom: none;
    }

    /* Bottom-left corner */
    .corner-bottom-left {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255, 255, 255, 0.6);
        border-right: none;
        border-top: none;
    }

    /* Bottom-right corner */
    .corner-bottom-right {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255, 255, 255, 0.6);
        border-left: none;
        border-top: none;
    }

    .overlay-title {
        margin: 0 0 16px 0;
        font-size: 2.2rem;

        line-height: 2.8rem;
        font-weight: 600;
        color: #ffffff;
        background: linear-gradient(135deg, #10b981 0%, #3b82f6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .overlay-message {
        margin: 0 0 24px 0;
        font-size: 18px;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
    }

    .overlay-cta-button {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 12px 16px;
        background-color: #fff;
        border: none;
        color: #222;
        border-radius: 20px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .overlay-cta-button:hover {
        background-color: #fff;
        color: #222;
    }

    .overlay-cta-button:active {
        transform: translateY(0);
    }

    .pricing-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .pricing-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease,
            border-color 0.2s ease;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .pricing-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 48px rgba(0, 0, 0, 0.5);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .card-header {
        padding: 32px 24px;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.02);
    }

    .plan-name {
        margin: 0 0 16px 0;
        font-size: 24px;
        font-weight: 700;
        color: #ffffff;
    }

    .price-container {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        margin-bottom: 8px;
    }

    .currency {
        font-size: 24px;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.8);
        margin-right: 4px;
        margin-top: 8px;
    }

    .price {
        font-size: 56px;
        font-weight: 700;
        color: #ffffff;
        line-height: 1;
    }

    .period {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 8px;
    }

    .billing-note {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.4);
        margin-top: 8px;
    }

    .tagline {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.6);
        font-weight: 500;
        margin-top: 8px;
    }

    .cardBody {
        padding: 32px 24px;
        flex: 1;
    }

    .feature-list {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .feature {
        padding: 12px 0;
        color: rgba(255, 255, 255, 0.8);
        font-size: 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
        padding-left: 24px;
    }

    .feature:last-child {
        border-bottom: none;
    }

    .feature::before {
        content: 'âœ“';
        position: absolute;
        left: 0;
        color: #10b981;
        font-weight: 700;
    }

    .cta-button {
        width: 100%;
        margin-top: 24px;
        padding: 12px 24px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        color: #ffffff;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .cta-button:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .cta-button:active {
        transform: translateY(0);
    }

    @media (max-width: 1024px) {
        .pricing-container {
            display: none;
        }

        .early-access-overlay {
            position: static;
            background: transparent;
            backdrop-filter: none;
            -webkit-backdrop-filter: none;
            border-radius: 0;
            padding: 0;
        }

        .overlay-content {
            padding: 32px 24px;
        }

        .overlay-title {
            font-size: 28px;
        }

        .overlay-message {
            font-size: 16px;
        }

        .overlay-cta-button {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }
    }

    @media (min-width: 768px) and (max-width: 1024px) {
        .pricing-container {
            display: none;
        }
    }
</style>
